root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
indent_style = tab
tab_width = 4
insert_final_newline = true

[*.xml]
indent_size = 2
indent_style = tab
tab_width = 2

[*.yml]
indent_size = 2
indent_style = space
tab_width = 2
insert_final_newline = true

[meson.build]
indent_size = 2
indent_style = space
insert_final_newline = true
